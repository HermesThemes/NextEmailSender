generator client {
  provider = "prisma-client-js"
  
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}


model User {
  id Int @id @default(autoincrement())
  name String @unique
  password  String
  role String
  image String
  emails Email[]
  schedules Schedule[]
}

model Email {
  id Int @id @default(autoincrement())
  dateSend DateTime @default(now())
  template String
  subject String
  sender String
  recievers String[]
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId Int
}

model Schedule {
  id Int @id @default(autoincrement())
  date DateTime
  html String @db.Text @default("")
  template String @default("")
  sender String
  recievers String[]
  subject String
  isSent Boolean
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId Int
}